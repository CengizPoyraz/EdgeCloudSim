        <poisson_interarrival>2</poisson_interarrival>
        <active_period>3600</active_period>
        <idle_period>1</idle_period>
        <data_upload>50</data_upload>
        <data_download>100</data_download>
        <task_length>500</task_length>
        <required_core>1</required_core>
        <vm_utilization_on_edge>3</vm_utilization_on_edge>
        <vm_utilization_on_cloud>1</vm_utilization_on_cloud>
